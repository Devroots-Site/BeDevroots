generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tools {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  language    String?
  keywords    Json?
  link        String[]
  author      String
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())
  picturepath String?
}

model documentation {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  version     String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  creator     String?
  filepath    String   @unique
  picturepath String?
  keywords    Json?
  is_active  Boolean  @default(true)
  is_public  Boolean  @default(true)
}

model websites {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  link        String   @unique
  keywords    String[]
}
